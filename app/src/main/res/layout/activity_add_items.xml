<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".AddItemsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="120dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:layout_marginRight="0dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="230dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="89dp"
                android:layout_marginBottom="33dp"
                android:text="REPAIR SPECIFICATIONS\n"
                android:textAlignment="center"
                android:textColor="#b3b3b3" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp">


            <EditText
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="163dp"
                android:layout_above="@+id/image"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="34dp"
                android:background="@color/white"
                android:hint="damage description"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#b3b3b3"
                android:textColorHint="#A1887F"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/item_name"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_above="@+id/item_description"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="33dp"
                android:background="@color/white"
                android:hint="device name"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#b3b3b3"
                android:textColorHint="#A1887F"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_above="@+id/add_item"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="34dp"
                android:background="@color/white"
                android:padding="10dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/add_item"
                android:layout_width="244dp"
                android:layout_height="52dp"
                android:layout_above="@+id/cancel"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/rounded_corners_button"
                android:text="ADD DEVICE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="244dp"
                android:layout_height="52dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="47dp"
                android:layout_marginBottom="43dp"
                android:background="@drawable/rounded_corners_button_cancel"
                android:text="CANCEL"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>